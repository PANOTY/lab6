#include <stdio.h>

void convertToRoman(int num) {
    // อาร์เรย์สำหรับเลขโรมัน
    const char *romanNumerals[] = {
        "M", "CM", "D", "CD", "C", "XC", "L", "XL", "X", "IX", "V", "IV", "I"
    };
    const int values[] = {
        1000, 900, 500, 400, 100, 90, 50, 40, 10, 9, 5, 4, 1
    };
    
    // แสดงผลเลขโรมัน
    printf("%d = ", num);
    
    for (int i = 0; i < 13; i++) {
        while (num >= values[i]) {
            printf("%s", romanNumerals[i]);
            num -= values[i];
        }
    }
    printf("\n");
}

int main() {
    int number;

    // รับค่าจากผู้ใช้
    printf("Enter a number:\n");
    scanf("%d", &number);

    // ตรวจสอบว่าหมายเลขอยู่ในช่วงที่ต้องการ
    if (number < 1 || number > 3999) {
        printf("Please enter a number between 1 and 3999.\n");
    } else {
        convertToRoman(number);
    }

    return 0;
}
